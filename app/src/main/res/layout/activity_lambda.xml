            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageText" tools:text="Player 1 Wins!"
            android:textColor="@color/colorText" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="149dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRoll" android:layout_marginTop="266dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintVertical_bias="1.0"/>
